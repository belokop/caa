    <![CDATA[<p>Flexlm
	     </p>]]>
  </description> 
  
  <!-- Custom Install Script to execute   <installfile>install.eventlist.php</installfile>  -->
  <!-- Custom Uninstall Script to execute <uninstallfile>uninstall.eventlist.php</uninstallfile>  -->
  <!-- Install Database Section 
       <install>
       <sql>
       <file driver="mysql" charset="utf8">install.mysql.utf8.sql</file>
       <file driver="mysql">install.mysql.nonutf8.sql</file>
       </sql>
       </install>
  -->
