       </sql>
       </uninstall>
  -->

  <!-- Site Main Language File Copy Section 
  <languages>
    <language tag="en-GB">en-GB.com_lic.ini</language>
    <language tag="cs-CZ">cs-CZ.com_lic.ini</language>
  </languages>
  -->
  
  
  <!-- Site Main File Copy Section-->
  <files>
<MAINFILES/>
  </files>
  
  <!-- Site Main Media File Copy Section        <media destination="com_lic"><filename>lic.png</filename></media>  -->

  <administration>
    
    <!-- Administration Menu Section -->
    <menu img="components/com_lic/images/lic.png">LIC World</menu>
    <submenu>
      <!-- Note that all & must be escaped to &amp; for the file to be valid XML and be parsed by the installer -->
      <menu link="option=com_lic&amp;task=vm">LIC World!</menu>
      <menu link="option=com_lic&amp;task=helloagain">LIC Again!</menu>
      <menu link="option=com_lic&amp;task=hellotestfoo">Testing Foo Function</menu>
    </submenu>
    
    <!-- Administration Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
	 to copy FROM in the package to install therefore files copied
	 in this section are copied from /admin/ in the package -->
    <files folder="admin">
<ADMINFILES/>
    </files>
		
    <!-- Administration Language File Copy Section 
    <languages folder="admin">
      <language tag="en-GB">en-GB.com_lic.ini</language>
      <language tag="cs-CZ">cs-CZ.com_lic.ini</language>
    </languages>
    -->
    
    <!-- Administration Main Media File Copy Section -->
    <media folder="admin" destination="com_lic/images">
      <filename>images/lic.png</filename>
    </media>

  </administration>
